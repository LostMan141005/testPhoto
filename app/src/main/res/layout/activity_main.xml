<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yqq.test.testphoto.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_photo"
                android:background="@null"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_takephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_takephoto"
                android:background="@null"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_photoSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_photoSelect"
                android:background="@null"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_photoUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_photoUpload"
                android:background="@null"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_downPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_downPhoto"
                android:background="@null"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btn_getPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="btn_getPath"
                android:background="@null"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="show path"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.yqq.test.testphoto.util.CircleImageView
                    android:id="@+id/civ_photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
